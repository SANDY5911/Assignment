#include <iostream>
#include <string>
using namespace std;

int main()
{
    string t,ct="",t2="";
 
     int n,choice,i,j,k,l;
   
   string com="abcdefghijklmnopqrstuvwxyz";
 
            cout<<"\nEnter Text : ";
            cin>>t;
 
            cout<<"Enter Number Of Shifts : ";
            cin>>n;
 
            if(n>25)
            {
                n=n%26;
            }

    for( i=0;i<t.length();i++)
    {
        for( j=0;j<26;j++)
        {
            if(t[i]==com[j])
            {
                if((j+n)>25)
                {
                    int t=(j+n-1)-25;
                    ct+=com[t];
                }
                
                else
                {
                    ct+=com[j+n];
                }
            }
  
        }
       
    }
cout<<"\nEncrypted Text : "<<ct;
      
 
    
    for( k=0;k<ct.length();k++)
    {   for( l=0;l<26;l++)
        {
            if(ct[k]==com[l])
            {
                if(l-n<0)
                {
                    int t=(l-n)-(2*(l-n));
                    t2+=com[26-t];
                }
                else
                {
                    t2+=com[l-n];
                }
                               
                                 

            }
            
        }
    }
    cout<<"\nDecrypted Text : "<<t2;
    
}

